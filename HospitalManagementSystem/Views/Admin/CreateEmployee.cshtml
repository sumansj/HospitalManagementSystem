@model HospitalManagementSystem.Models.Employees;
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}

<head>
    <style>
        .custom-margin {
            margin-left: 300px;
        }

        body {
            background-image: url('/images/image3.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>
</head>

<body>
    <div class="col-md-8">
        <div>
            <h3 style="text-align:center">Employee's Registration</h3>
            <form asp-controller="Admin" asp-action="EmployeeSave" method="post" autocomplete="off">
                <table class="table table-borderless">
                    <tr>
                        <td>
                            <label asp-for="FirstName" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="LastName" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label asp-for="DateOfBirth" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input type="date" asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="Mobile" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input asp-for="Mobile" class="form-control" />
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label asp-for="Email" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="Address" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input asp-for="Address" class="form-control" />
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <label asp-for="City" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input asp-for="City" class="form-control" />
                        </td>
                        <td>
                            <label asp-for="State" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input asp-for="State" class="form-control" />
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label asp-for="Country" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input asp-for="Country" class="form-control" />
                        </td>
                        <td>
                            <label asp-for="Desgination" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input asp-for="Desgination" class="form-control" />
                            <span asp-validation-for="Desgination" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label asp-for="JoiningDate" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input type="date" asp-for="JoiningDate" class="form-control" />
                        </td>
                        <td>
                            <label asp-for="EndDate" class="control-label fs-6"></label>
                        </td>
                        <td>
                            <input type="date" asp-for="EndDate" class="form-control" />
                        </td>
                    </tr>
                </table>
                <div class="mt-3 custom-margin">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-success w-auto" />
                            <a asp-action="Index" asp-controller="Home" class="btn btn-danger w-auto">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @section ValidationScripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
