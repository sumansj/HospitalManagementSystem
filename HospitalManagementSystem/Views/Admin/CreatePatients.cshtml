@model HospitalManagementSystem.Models.Patients
@{
    ViewData["Title"] = "CreatePatients";
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
    var baseURl = "https://localhost:44373/";
}

<head>
    <style>
        .custom-mt {
            margin-top: 120px;
        }
        .custom-margin{
            margin-left: 300px;
        }
        body{
            background-image: url('/images/image3.png');
            background-size:cover;
            background-repeat:no-repeat;
            background-attachment:fixed;
        }
    </style>
</head>

<body>
    @*<div class="row">*@
        
        <div class="col-md-8">
            <div>
                <h3 style="text-align:center">Patient's Registration</h3>
                <form asp-controller="Admin" asp-action="PatientSave" method="post" autocomplete="off">
                    <table class="table table-borderless">
                        <tr>
