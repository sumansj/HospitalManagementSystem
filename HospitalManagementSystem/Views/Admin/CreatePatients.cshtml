                            </td>
                            <td>
                                <label asp-for="UserId" class="control-label fs-6"></label>
                            </td>
                            <td>
                                <select asp-for="UserId" class="form-control" asp-items="ViewBag.doctorDetails"
                                        id="DoctorId">
                                </select>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <label asp-for="BId" class="control-label fs-6"></label>
                            </td>
                            <td>
                                <select asp-for="BId" class="form-control" asp-items="ViewBag.bloodGroupDetails">
                                </select>
                            </td>
                            <td>
                                <label asp-for="GId" class="control-label fs-6"></label>
                            </td>
                            <td>
                                <select asp-for="GId" class="form-control" asp-items="ViewBag.genderDetails">
                                </select>
                            </td>
