@model HospitalManagementSystem.ViewModel.LoginViewModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<head>
    <style>
        body {
            background-image: url('/images/image3.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .custom-card {
            background-image: url('/images/image3.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>
</head>
<body>
    <div>
        <div class="card mt-5 mb-8">
            <div class="row">
                <div class="col-md-5 border-end">
                    <div class="card-body mt-5 mb-8">
                        <img src="~/images/image4.png" />
                    </div>
                </div>
                <div class="col-md-7 custom-card">
                    <div class="card-body mt-5 mb-8">
                        <h2>Login</h2>
                        <br />
                        @if (TempData["logout"] != null)
                        {
                            <h4>Successfully Loggedout.Thankyou</h4>
                        }
                        <form asp-controller="Login" asp-action="LoginSave" method="post" autocomplete="off">
                            <div class="form-group">
                                <label asp-for="UserName" class="control-label"></label>
                                <input asp-for="UserName" class="form-control w-auto" placeholder="User Name" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control w-auto" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <br />
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input type="submit" value="Login" class="btn btn-primary w-auto" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section ValidationScripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
