@model IEnumerable<HospitalManagementSystem.ViewModel.DoctorsPatientsViewModel>
@{
    ViewData["Title"] = "OPDListToday";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<head>
    <style>
        .custom-mt {
            margin-top: 60px;
        }

        .custom-margin {
            margin-left: 300px;
        }

        body {
            background-image: url('/images/image3.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-3">
        </div>
        @*<h3 style="text-align:center">Patient Details</h3>*@
        <div class="col-md-6">
            <div>
                <h3 style="text-align:center">Today's Appointments</h3>
                <div class="hide">
                    <table class="table table-hover table-borderless custom-mt">
                        <tr>
                            <th>PatientId</th>
                            <th>PatientName</th>
                            <th>DoctorName</th>
                            <th>DepartmentName</th>
                            <th>Date</th>
                            <th>Time</th>
                        </tr>
                        @foreach (var items in Model)
                        {
                            <tr>
                                <td id="patientId">
                                    @Html.DisplayFor(modelitems => items.PatientId)
                                </td>
                                <td id="patientName">
                                    @Html.DisplayFor(modelitems => items.PatientName)
                                </td>
                                <td id="doctorName">
                                    @Html.DisplayFor(modelitems => items.DoctorName)
                                </td>
                                <td id="departmentName">
                                    @Html.DisplayFor(modelitems => items.DepartmentName)
                                </td>
                                <td id="date">
                                    @Html.DisplayFor(modelitems => items.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitems => items.Time)
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div>
                <form class="d-flex" autocomplete="off">
                    <input class="form-control me-2" type="search" placeholder="Full Name" id="fullname">
                    <button class="btn btn-outline-dark" type="button" id="search">Search</button>
                </form>
            </div>
        </div>
    </div>
</body>


